<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <h2 class="text-2xl font-bold mb-8">Add New Tab for <%= @toggle.title %></h2>

            <%= form_with(model: [@toggle, @tab], local: true, class: "space-y-6") do |f| %>
              <% if @tab.errors.any? %>
                <div class="bg-red-50 p-4 rounded-md mb-4">
                  <h2 class="text-red-700 text-sm font-medium mb-2">
                    <%= pluralize(@tab.errors.count, "error") %> prohibited this tab from being saved:
                  </h2>
                  <ul class="list-disc pl-5 text-red-600 text-sm">
                    <% @tab.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div>
                <%= f.label :tab_type, "Select Tab", class: "block text-sm font-medium text-gray-700" %>
                <%= f.select :tab_type, 
                    Tab::VALID_TAB_TYPES.map { |type| [type.titleize, type] },
                    { prompt: "Select a tab type" },
                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>

              <div>
                <%= f.label :start_date, class: "block text-sm font-medium text-gray-700" %>
                <%= f.date_field :start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>

              <div>
                <%= f.label :end_date, class: "block text-sm font-medium text-gray-700" %>
                <%= f.date_field :end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              </div>

              <div class="flex justify-end space-x-3">
                <%= link_to "Cancel", toggle_path(@toggle), class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                <%= f.submit "Create Tab", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 