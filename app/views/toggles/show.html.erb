<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="border-b border-gray-200 pb-4 mb-6">
          <div class="flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-900"><%= @toggle.title %></h1>
            <%= link_to "Back to Toggles", toggles_path, class: "text-indigo-600 hover:text-indigo-900" %>
          </div>
        </div>

        <div class="mb-8">
          <div class="bg-gray-50 rounded-lg p-4">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Toggle Details</h2>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Type</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @toggle.toggle_type %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Image URL</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @toggle.image_url %></dd>
              </div>
            </div>
          </div>
        </div>

        <div class="mb-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-medium text-gray-900">Associated Tabs</h2>
            <%= link_to "Add Tab", new_toggle_tab_path(@toggle), class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>

          <% if @associations.any? %>
            <div class="space-y-4">
              <% @associations.each do |association| %>
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <div class="flex items-center">
                        <h3 class="text-lg font-medium text-gray-900"><%= association.tab.tab_type %></h3>
                      </div>
                      <div class="mt-1 text-sm text-gray-600">
                        <%= association.start_date %> to <%= association.end_date %>
                      </div>
                      <div class="mt-1 text-sm text-gray-600">
                        Status: <%= association.tab.active? ? 'Active' : 'Inactive' %>
                      </div>
                      <div class="mt-1 text-sm text-gray-600">
                        Type: <%= association.toggle_type %>
                      </div>
                      <div class="mt-1 text-sm text-gray-600">
                        Link: <%= association.link_type %>
                      </div>
                      <% if association.tab.respond_to?(:regions) && association.tab.regions.present? %>
                        <div class="mt-1 text-sm text-gray-600">
                          Regions: <%= association.tab.regions %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex space-x-2">
                      <%= link_to "Edit", edit_toggle_tab_path(@toggle, association.tab), class: "text-indigo-600 hover:text-indigo-900" %>
                      <%= button_to "Delete", toggle_tab_path(@toggle, association.tab), method: :delete, class: "text-red-600 hover:text-red-900", data: { confirm: "Are you sure?" } %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No tabs associated with this toggle yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>