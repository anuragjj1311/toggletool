<%# This page redirects to toggles#index %>

<%# Main dashboard container %>
<div class="container mx-auto px-4 py-8">
  <%# Header section with action buttons %>
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Toggle Dashboard</h1>
    <div class="space-x-4">
      <%= link_to "New Toggle", new_toggle_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <%# Toggle grid %>
  <div class="grid grid-cols-1 gap-8">
    <% @toggles.each do |toggle| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <%# Toggle header %>
        <div class="flex justify-between items-start mb-6">
          <h2 class="text-xl font-semibold text-gray-800"><%= toggle.title %></h2>
          <div class="flex space-x-2">
            <%= link_to "Edit", edit_toggle_path(toggle), class: "px-3 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
          </div>
        </div>

        <%# Tabs section - Horizontal layout %>
        <div class="mt-6">
          <div class="flex flex-wrap gap-3">
            <% toggle.tabs.each do |tab| %>
              <div class="px-4 py-2 bg-gray-50 rounded-lg border border-gray-200">
                <div class="text-gray-700 font-medium"><%= tab.title %></div>
                <div class="mt-1 text-xs text-gray-500">
                  <div>Type: <%= toggle.toggle_type %></div>
                  <div>Link: <%= toggle.tab_toggle_associations.first&.link_type || 'N/A' %></div>
                  <div>Date: <%= toggle.tab_toggle_associations.first&.start_date&.strftime("%Y-%m-%d") || 'N/A' %> to <%= toggle.tab_toggle_associations.first&.end_date&.strftime("%Y-%m-%d") || 'N/A' %></div>
                  <div>Regions: <%= toggle.tab_toggle_associations.first&.regions&.join(", ") || 'N/A' %></div>
                </div>
                <div class="mt-2">
                  <span class="px-2 py-1 text-xs rounded-full <%= tab.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= tab.active? ? 'Active' : 'Inactive' %>
                  </span>
                </div>
              </div>
            <% end %>

            <%# Add new tab button %>
            <%= link_to "Add Tab", new_toggle_tab_path(toggle), class: "px-4 py-2 text-sm text-gray-600 border border-dashed border-gray-300 rounded-lg hover:bg-gray-50 hover:text-gray-800 transition-colors" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# Empty state %>
  <% if @toggles.empty? %>
    <div class="text-center py-12">
      <h3 class="mt-4 text-lg font-medium text-gray-900">No toggles yet</h3>
      <p class="mt-2 text-gray-500">Get started by creating your first toggle.</p>
      <%= link_to "Create Toggle", new_toggle_path, class: "mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  <% end %>
</div>

