<%# This page redirects to toggles#index %>

<%# Main container %>
<div class="container mx-auto px-4 py-10">
  <%# Header section %>
  <div class="flex justify-between items-center mb-10">
    <h1 class="text-4xl font-bold text-gray-900">Toggle Management Tool</h1>
    <%= link_to "Create New Toggle", new_toggle_path, class: "px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition" %>
  </div>

  <%# Toggles section %>
  <div class="space-y-8">
    <% @toggles.each do |toggle| %>
      <div class="bg-white border border-gray-200 rounded-xl shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <div>
            <h2 class="text-2xl font-semibold text-gray-800"><%= toggle.title %></h2>
            <p class="text-sm text-gray-500 mt-1">Type: <span class="font-medium"><%= toggle.toggle_type %></span></p>
          </div>
          <div class="flex space-x-2">
            <%= link_to "Update Toggle", edit_toggle_path(toggle), class: "px-4 py-1 bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition" %>
            <%= link_to "Add Tab", new_toggle_tab_path(toggle), class: "px-4 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
          </div>
        </div>
        <div class="border-t border-gray-100 pt-4 mt-4">
          <% valid_tabs = toggle.tabs.select { |tab| tab.title.present? } %>
          <% if valid_tabs.any? %>
            <div class="flex flex-wrap gap-4">
              <% valid_tabs.each do |tab| %>
                <% association = tab.tab_toggle_associations.find_by(toggle_id: toggle.id) %>
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 min-w-[260px] flex-1 max-w-xs">
                  <div class="flex justify-between items-center mb-2">
                    <h3 class="text-lg font-bold text-gray-700"><%= tab.title %></h3>
                    <%= link_to "Edit", edit_toggle_tab_path(toggle, tab), class: "text-xs text-blue-600 hover:underline" %>
                  </div>
                  <div class="text-xs text-gray-500 mb-2">Type: <%= tab.tab_type %></div>
                  <div class="text-sm space-y-1">
                    <div><span class="font-medium text-gray-600">Date Range:</span> <%= tab.start_date %> to <%= tab.end_date %></div>
                    <div><span class="font-medium text-gray-600">Regions:</span> <%= tab.regions&.join(", ") || "All" %></div>
                    <div><span class="font-medium text-gray-600">Link Type:</span> <%= association&.link_type || "Not specified" %></div>
                    <div><span class="font-medium text-gray-600">Status:</span> <span class="inline-block px-2 py-0.5 rounded-full <%= tab.active? ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>"><%= tab.active? ? 'Active' : 'Inactive' %></span></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-gray-400 italic">No tabs for this toggle yet.</div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%# Empty state %>
  <% if @toggles.empty? %>
    <div class="text-center py-12">
      <h3 class="mt-4 text-lg font-medium text-gray-900">No toggles yet</h3>
      <p class="mt-2 text-gray-500">Get started by creating your first toggle.</p>
      <%= link_to "Create Toggle", new_toggle_path, class: "mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  <% end %>
</div> 